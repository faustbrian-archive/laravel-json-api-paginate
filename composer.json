{
    "name": "faustbrian/laravel-json-api-paginate",
    "description": "JSON:API Pagination for Laravel",
    "keywords": [
        "faustbrian",
        "laravel",
        "laravel-json-api-paginate"
    ],
    "homepage": "https://github.com/faustbrian/laravel-json-api-paginate",
    "license": "MIT",
    "authors": [
        {
            "name": "Brian Faust",
            "email": "brian@faust.mx",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^8.37"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.1",
        "graham-campbell/analyzer": "^3.0",
        "nunomaduro/collision": "^5.3",
        "orchestra/testbench": "^6.15",
        "pestphp/pest": "^1.18",
        "pestphp/pest-plugin-laravel": "^1.1",
        "pestphp/pest-plugin-parallel": "^0.3.1",
        "spatie/laravel-ray": "^1.23",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Faust\\JsonApiPaginate\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Faust\\JsonApiPaginate\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest --no-coverage --parallel",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Faust\\JsonApiPaginate\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
